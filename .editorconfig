# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true

[books/**.md]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[{*.md,books/**/{SUMMARY,gramati}.md}]
indent_style = space
indent_size = unset
trim_trailing_whitespace = false
max_line_length = 80

[*.{css,json}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 80

[{justfile}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
